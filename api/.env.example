DATABASE_URL="mysql://USER:PASSWORD@mysql:3306/DATABASE"
# Server port (optional, defaults to 3000)
PORT=3000
# JWT secret for signing tokens (required)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d
# Allowed origins for CORS (comma separated)
CORS_ORIGIN=http://localhost:5173,https://semakin.databenuanta.id
# Frontend base URL (optional
WEB_URL=http://localhost:5173
# Optional cookie settings
#COOKIE_DOMAIN=localhost
#COOKIE_SAMESITE=lax

# Rate limiting (optional)
THROTTLE_TTL=900
THROTTLE_LIMIT=100

# Redis cache
REDIS_URL=redis://localhost:6379

# WhatsApp integration
# Base URL for the WhatsApp API
WHATSAPP_API_URL=https://fonnte.com/api
# Fonnte API token (use this if sending via Fonnte)
FONNTE_TOKEN=your_fonnte_token_here
# Generic WhatsApp API token (alternative provider)
WHATSAPP_TOKEN=your_whatsapp_token_here
# Enable phone number validation (true/false, default true)
PHONE_VALIDATION_ENABLED=true
